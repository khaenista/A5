
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Set - <%= set.name %></title>
    <link rel="stylesheet" href="/styles.css"> <!-- Assuming you have a styles.css file for styling -->
</head>
<body>

<%- include('partials/navbar', { page: '' }) %> <!-- Render navbar with empty page value -->

<div class="container">
    <h1 class="text-3xl font-bold mb-4">Edit Set - <%= set.name %></h1>
    
    <form action="/lego/editSet" method="POST" class="max-w-md">
        <div class="mb-4">
            <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
            <input type="text" id="name" name="name" value="<%= set.name %>" class="form-input">
        </div>
        <div class="mb-4">
            <label for="year" class="block text-sm font-medium text-gray-700">Year</label>
            <input type="number" id="year" name="year" value="<%= set.year %>" class="form-input">
        </div>
        <div class="mb-4">
            <label for="num_parts" class="block text-sm font-medium text-gray-700">Number of Parts</label>
            <input type="number" id="num_parts" name="num_parts" value="<%= set.num_parts %>" class="form-input">
        </div>
        <div class="mb-4">
            <label for="img_url" class="block text-sm font-medium text-gray-700">Image URL</label>
            <input type="url" id="img_url" name="img_url" value="<%= set.img_url %>" class="form-input">
        </div>
        <div class="mb-4">
            <label for="theme_id" class="block text-sm font-medium text-gray-700">Theme</label>
            <select id="theme_id" name="theme_id" class="form-select">
                <% themes.forEach(theme => { %>
                    <option value="<%= theme.id %>" <%= (set.theme_id == theme.id) ? "selected" : "" %>><%= theme.name %></option>
                <% }) %>
            </select>
        </div>
        <div class="mb-4">
            <label for="set_num" class="block text-sm font-medium text-gray-700">Set Number</label>
            <input type="text" id="set_num" name="set_num" value="<%= set.set_num %>" class="form-input" readonly>
        </div>
        <button type="submit" class="btn btn-primary">Update Set</button>
    </form>
</div>

</body>
</html>
<!-- editSet.ejs -->
<button class="btn btn-error" onclick="deleteSet('<%= set.set_num %>')">Delete Set</button>
